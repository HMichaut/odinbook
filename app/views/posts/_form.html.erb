  <article class="media box">
    <figure>
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image.variant(resize: "64x64!"), class: "image" %>
      <% else %>
          <%= image_tag("user.png", class: "image", size: "64x64",) %>
      <% end %>
    </figure>
    <div class="media-content">
      <%= simple_form_for(@post) do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :body, label: "Post about it", input_html: { class: "textarea " }, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new post...", autofocus: true %>
        </div>
      </div>
      <%= f.button :submit, class: "button is-info" %>
      <% end %>
    </div>
  </article>
  
