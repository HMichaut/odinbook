<%= simple_form_for(@comment) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :body, label: "Comment the post", input_html: { class: "text " }, wrapper: false, label_html: {class: "label"}, placeholder: "Write your comment", autofocus: false %>
    <%= f.hidden_field :post_id, value: post_id %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
